<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name=".ExamCountdownApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_exam_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_exam_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.ExamCountdown">

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".widget.NextExamWidgetProvider"
            android:label="@string/widget_next_exam_name"
            android:exported="false">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/next_exam_widget_info" />
        </receiver>

        <receiver
            android:name=".widget.ExamListWidgetProvider"
            android:label="@string/widget_exam_list_name"
            android:exported="false">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/exam_list_widget_info" />
        </receiver>

        <receiver
            android:name=".reminder.ExamReminderActionReceiver"
            android:exported="false" />
    </application>

</manifest>
