<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listWidgetRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_card_background"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kommende Prüfungen"
        android:textColor="@color/widget_muted"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/listEmptyState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Noch keine Prüfungen"
        android:textColor="@color/widget_on_surface"
        android:textSize="14sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="27.02. 08:00  •  Deutsch"
        android:textColor="@color/widget_on_surface"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/row2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="03.03. 10:15  •  Mathematik"
        android:textColor="@color/widget_on_surface"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/row3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="07.03. 09:00  •  Geschichte"
        android:textColor="@color/widget_on_surface"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/row4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="12.03. 13:30  •  Englisch"
        android:textColor="@color/widget_on_surface"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/row5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="15.03. 08:00  •  Chemie"
        android:textColor="@color/widget_on_surface"
        android:textSize="14sp" />
</LinearLayout>
