<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widgetRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_card_background"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nächste Prüfung"
        android:textColor="@color/widget_muted"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/nextExamTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Maturaprüfung Deutsch"
        android:textColor="@color/widget_on_surface"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/nextExamTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Do, 27.02.2026 · 08:00"
        android:textColor="@color/widget_muted"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/nextExamCountdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="in 3 Tagen 4 Std"
        android:textColor="@color/widget_on_surface"
        android:textSize="15sp"
        android:textStyle="bold" />
</LinearLayout>
